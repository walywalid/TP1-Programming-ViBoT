/*=============================================
Area and Circumference
=============================================*/
#include <iostream>
#include <math.h> 

int main()
{
    float r, area, circum;
    std::cout << "Enter the radius of the circle: ";
    std::cin >> r;
    area = 3.142;
    circum = 2*3.142*r;
    std::cout<<"area = "<<area<<"circumfernce = "<<circum << std::endl;


}
/*=============================================
Max & Min
=============================================*/
#include <iostream>
#include <math.h> 

int main()
{
   //Minimum
    int B[] = {49,42,35,28,21,14,7,1,7,14,21,28,35,42,49,};
     int Min = B[0];
     for(int i=1;i<15;i++)
     if(B[i]<Min)
       Min = B[i];
    std::cout<< "The Minimum value of the table is: " << Min<< std::endl;

    //Maximum
    int A[] = {49,42,35,28,21,14,7,1,7,14,21,28,35,42,49,};
         int Max = A[0];
         for(int i=1;i<15;i++)
         if(A[i]>Max)
           Max = A[i];
        std::cout<< "The maximum value of the table is: " << Max<< std::endl;


}

/*=============================================
Fibonnaci sequence
=============================================*/
#include <iostream>
#include <math.h> 

int fibonacci(int n)
{
    if((n==0)||(n==1))
    {
        return(n);
    }
    else
    {
        return(fibonacci(n-1)+fibonacci(n-2));
    }
}

int main()
{
    int n, i=0;
    std::cout<<"Enter the number of terms for Finonacci: ";
    std::cin>>n;
    std::cout<<"\nFibonacci sequence are as follows: \n";

    while(i<n)
    {
        std::cout<<" "<<fibonacci(i);
        i++;
    }

}



/*=============================================
Multiplication table
=============================================*/
#include <iostream>
#include <math.h> 

int main()
{
    int i,a;
       std::cout<< "Please Enter an integer:";
       std::cin>>a;
       for(i=1;i<=a;i++)
       std::cout<<a<< "*" <<i<< "="<<a*i<< std::endl;

}

/*=============================================
Truth table
=============================================*/
#include <iostream>

int main()
{
  bool bAnswer;
  std::cout<< "OR Table\n\n";
  std::cout<<"0 + 0 = " <<(bAnswer = 0 + 0) << std::endl;
  std::cout<<"1 + 0 = " <<(bAnswer = 1 + 0) << std::endl;
  std::cout<<"0 + 1 = " <<(bAnswer = 0 + 1) << std::endl;
  std::cout<<"1 + 1 = " <<(bAnswer = 1 + 1) << std::endl;

  std::cout<< "AND Table\n\n";
  std::cout<<"0 & 0 = " <<(bAnswer = 0 & 0) << std::endl;
  std::cout<<"1 & 0 = " <<(bAnswer = 1 & 0) << std::endl;
  std::cout<<"0 & 1 = " <<(bAnswer = 0 & 1) << std::endl;
  std::cout<<"1 & 1 = " <<(bAnswer = 1 & 1) << std::endl;


  return 0;

}










